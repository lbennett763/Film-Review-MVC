    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    
    <!--<table class="table">-->
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Film_Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Runninig_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year_Released)
            </th>
            <th>
